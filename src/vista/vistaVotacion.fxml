<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="contenedorPrincipal" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.ControladorVistaVotacion">
   <bottom>
      <VBox fx:id="vistaOpciones" alignment="CENTER" fillWidth="false" spacing="20.0" style="-fx-background-color: ffa64d;" BorderPane.alignment="TOP_LEFT">
         <children>
            <Separator halignment="RIGHT" prefHeight="0.0" prefWidth="570.0" valignment="TOP" />
            <HBox spacing="10.0">
               <children>
                  <JFXRadioButton fx:id="radioButtonSumRound" onAction="#ocultarSumatoriaRoundClicked" styleClass="textoSecundario" text="Ocultar sumatoria Round" />
                  <JFXRadioButton fx:id="radioButtonSumTotal" onAction="#ocultarSumatoriaTotalClicked" styleClass="textoSecundario" text="Ocultar sumatoria Total" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label alignment="TOP_LEFT" styleClass="textoSecundario" text="Diferencia minima para replica">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <JFXTextField alignment="CENTER" prefHeight="5.0" prefWidth="20.0" style="-fx-background-color: lightblue;" text="5">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </JFXTextField>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
            <Separator halignment="RIGHT" prefHeight="0.0" prefWidth="570.0" valignment="TOP" />
            <ButtonBar>
               <buttons>
                  <JFXButton onAction="#botonNuevaBatallaClicked" styleClass="botonSecundario" text="Nueva Batalla" />
                  <JFXButton styleClass="botonSecundario" text="Guardar batalla" />
                  <JFXButton fx:id="btnSalir" onAction="#botonSalirClicked" style="-fx-background-color: #ff471a;" styleClass="botonSecundario" text="Salir" />
               </buttons>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </ButtonBar>
         </children>
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </bottom>
   <top>
      <StackPane fx:id="stackVotacion">
         <children>
            <VBox fx:id="vistaResultados" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="El ganador es : " />
                  <Label fx:id="labelGanador" text="Label" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <JFXButton onAction="#botonVolverAPlanillaClicked" text="Volver a planilla" textFill="#691ad0" />
                        <JFXButton text="Ver estadisticas" textFill="#5634ab" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </top>
   <center>
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #b3cce6;">
         <children>
            <JFXToggleButton fx:id="toggleOpciones" alignment="TOP_LEFT" onAction="#ocultarOpcionesClicked" size="6.0" styleClass="textoSecundario" text="Vista reducida">
               <HBox.margin>
                  <Insets />
               </HBox.margin></JFXToggleButton>
            <JFXButton fx:id="btnObtenerResultados" onAction="#botonObtenerResultadosClicked" ripplerFill="BLACK" styleClass="botonSecundario" text="Obtener resultados" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </center>
   <left>
      <Label text="Dtoke: 50" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Label text="Papo: 40" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
